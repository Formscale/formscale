{
  "files.exclude": {
    "api": true,
    "frontend": true,
    "packages": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "autoOpenWorkspace.enableAutoOpenIfSingleWorkspace": true,
  "autoOpenWorkspace.enableAutoOpenAlwaysFirst": true
}
